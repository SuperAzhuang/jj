<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:scrollbars="none"
    tools:context=".ui.LoginActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="40dip"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="420px"
                android:layout_height="80px"
                android:layout_marginTop="80px"
                android:src="@mipmap/feihua_logo"/>


            <ImageView
                android:layout_width="320px"
                android:layout_height="320px"
                android:layout_marginTop="60px"
                android:src="@mipmap/icon_login_head"/>
        </LinearLayout>

        <EditText
            android:id="@+id/login_et_uesrname"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_marginTop="120px"
            android:background="@drawable/bg_edt_white"
            android:drawableLeft="@mipmap/icon_username"
            android:drawablePadding="50px"
            android:ems="10"
            android:hint="@string/loginactivity_Please_enter_account"
            android:inputType="textEmailAddress"
            android:paddingLeft="50px"
            android:textColor="@color/text_blue"
            android:textColorHint="#ffdddddd">
        </EditText>

        <EditText
            android:id="@+id/login_et_pw"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:layout_marginTop="40px"
            android:background="@drawable/bg_edt_white"
            android:drawableLeft="@mipmap/icon_password"
            android:drawablePadding="50px"
            android:hint="@string/loginactivity_Please_enter_password"
            android:inputType="textPassword"
            android:paddingLeft="50px"
            android:textColor="@color/text_blue"
            android:textColorHint="#ffdddddd"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="20px">

            <CheckBox
                android:id="@+id/login_loginactivity_Remember_password_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:button="@drawable/login_check_bg"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="@string/loginactivity_Remember_password"
                android:textColor="@color/white"
                android:textSize="30px"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20px"
            android:background="@mipmap/bg_btn_login"
            android:gravity="center"
            android:text="登录"
            android:textColor="@drawable/button_textcolor"
            android:textSize="36px"/>

        <ImageView
            android:layout_width="240px"
            android:layout_height="20px"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="40px"
            android:src="@mipmap/feihua_name"
            />


    </LinearLayout>
</ScrollView>