<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_xuxian"
              android:orientation="vertical"
              android:paddingBottom="15dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_details_c13"/>

        <TextView
            style="@style/tv_customer_details"
            android:text="表位(GPS):"
            />


        <Button
            style="@style/btn_dialog_red"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="@string/huoqu"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        style="@style/edt_customer_details"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|left"
        android:text="26.232326562,114.585656565623"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_details_c14"/>

        <TextView
            style="@style/tv_customer_details"
            android:text="本期起码:"
            />

        <TextView
            style="@style/edt_customer_details"
            android:layout_width="100dp"
            android:layout_height="30dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_details_c15"/>

        <TextView
            style="@style/tv_customer_details"
            android:text="本期止码:"
            />

        <EditText
            style="@style/edt_customer_details"
            android:layout_width="100dp"
            android:layout_height="30dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_details_c16"/>

        <TextView
            style="@style/tv_customer_details"
            android:text="水量:"
            />

        <TextView
            style="@style/edt_customer_details"
            android:layout_width="100dp"
            android:layout_height="30dp"
            />

    </LinearLayout>

</LinearLayout>
