<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_user_head"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_headlogo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_user"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            style="@style/ll_user">

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color1"
                android:text="@string/user_name"
                />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/tv_user_right"
                android:text="@string/user_name"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            style="@style/ll_user">

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color2"
                android:text="@string/user_position"/>

            <TextView
                android:id="@+id/tv_user_position"
                style="@style/tv_user_right"
                android:text="@string/user_position"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            style="@style/ll_user">

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color3"
                android:text="@string/user_number"/>

            <TextView
                android:id="@+id/tv_user_number"
                style="@style/tv_user_right"
                android:text="@string/user_number"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            style="@style/ll_user">

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color4"
                android:text="@string/user_phone"/>

            <TextView
                android:id="@+id/tv_user_phone"
                style="@style/tv_user_right"
                android:text="@string/user_phone"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            style="@style/ll_user">

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color5"
                android:text="@string/user_area"/>

            <TextView
                android:id="@+id/tv_user_area"
                style="@style/tv_user_right"
                android:text="@string/user_area"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <LinearLayout
            style="@style/ll_user"
            >

            <TextView
                style="@style/tv_user_left"
                android:drawableLeft="@mipmap/icon_user_color6"
                android:text="@string/user_update"/>

            <TextView
                android:id="@+id/tv_user_update"
                style="@style/tv_user_right"
                android:text="@string/user_update"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>
