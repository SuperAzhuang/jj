<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:paddingBottom="10px"
                android:paddingLeft="15px"
                android:paddingRight="7px"
                android:paddingTop="5px">

                <TextView
                    style="@style/tv_tjcx_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="户名:"/>

                <EditText
                    style="@style/et_tjcx_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:id="@+id/etKH"
                    android:textColor="@color/et_text_color"
                    android:hint="请输入户名"
                    android:background="@drawable/et_white"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:paddingBottom="5px"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:paddingTop="10px">


                <TextView
                    style="@style/tv_tjcx_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码:"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:id="@+id/etSJ"
                    android:textColor="@color/et_text_color"
                    android:hint="请输入手机号码"
                    style="@style/et_tjcx_text_title"
                    android:background="@drawable/et_white"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10px"
                android:paddingLeft="15px"
                android:paddingRight="15px"
                android:paddingTop="5px">

                <TextView
                    style="@style/tv_tjcx_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:id="@+id/etAddr"
                    android:textColor="@color/et_text_color"
                    android:hint="请输入地址"
                    style="@style/et_tjcx_text_title"
                    android:background="@drawable/et_white"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnQuery"
        android:layout_width="360px"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:background="@drawable/btn_yellow"
        android:text="查　　询"
        android:textColor="@color/white"
        android:textSize="34px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="20px"
        android:background="#e89800"
        android:gravity="center_vertical">

        <TextView
            style="@style/tv_tjcx_text_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="户号"/>

        <TextView
            style="@style/tv_tjcx_text_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="户名"/>

        <TextView
            style="@style/tv_tjcx_text_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="地址"/>

        <TextView
            style="@style/tv_tjcx_text_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="手机号"/>


    </LinearLayout>

    <ListView
        android:id="@+id/lvTjcx"
        android:layout_width="match_parent"
        android:divider="@drawable/line_black_h"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>